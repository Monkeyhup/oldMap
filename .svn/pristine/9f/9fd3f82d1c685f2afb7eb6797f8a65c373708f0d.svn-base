package com.supermap.sgis.visual.data;

/**
 * 分页对象
 *
 * @author Created by W.Hao on 14-2-17.
 */
public class PageInfo {

    /** 第几页，默认为0 */
    private int pageNumber = 0;

    /** 每页的条数，默认为10 */
    private int pageSize = 10;

    /** 页是否被使用中，默认为false */
    boolean pageUsing = false;

    /**
     * 取得第几页
     *
     * @return 第几页
     */
    public int getPageNumber() {
        return pageNumber;
    }

    /**
     * 设置第几页
     *
     * @param pageNumber
     *            第几页
     */
    public void setPageNumber(int pageNumber) {
        this.pageNumber = pageNumber;
    }

    /**
     * 取得每页的条数
     *
     * @return 每页的条数
     */
    public int getPageSize() {
        return pageSize;
    }

    /**
     * 设置每页的条数
     *
     * @param pageSize
     *            每页的条数
     */
    public void setPageSize(int pageSize) {
        this.pageSize = pageSize;
    }

    /**
     * 取得页是否被使用中
     *
     * @return 页是否被使用中
     */
    public boolean isPageUsing() {
        return pageUsing;
    }

    /**
     * 设置页是否被使用中
     *
     * @param pageUsing
     *            页是否被使用中
     */
    public void setPageUsing(boolean pageUsing) {
        this.pageUsing = pageUsing;
    }
}
